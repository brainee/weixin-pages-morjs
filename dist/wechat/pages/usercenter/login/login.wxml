<!--pages/usercenter/login/login.tsx.wxml-->
<view class="loginBox">
  <f-brand-card loginType="{{accountLogin}}" style="background-color: red;"></f-brand-card>
  
  <view class="get-mobile-group">
    <!-- prefixIcon="user-avatar"  -->
    <t-input bindclear="inputChange" bindchange="inputChange" data-prop="account" value="{{formData.account}}" label="+86" placeholder="请输入手机号" clearable></t-input>

    <!-- <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
    获取
    </button> -->
  </view>

  <t-input bindclear="inputChange" bind:click="changEye" bindchange="inputChange" data-prop="password" value="{{formData.password}}" prefixIcon="lock-on" placeholder="请输入密码" suffixIcon="{{ { name: showPassword?'browse':'browse-off' } }}" type="{{showPassword?'':'password'}}" clearable></t-input>

  <view class="loginButtonArea">
    <t-button bindtap="login" theme="primary" size="large" block disabled="{{disabled}}">登录</t-button>
  </view>
  <t-button bindtap="goStep2" theme="primary" size="large" block>下一步</t-button>
  
  <view class="user-protocal-can">
    <t-radio bind:change="onChangeOfRead">我已阅读并接受</t-radio>
    <!-- <span> -->
      <p class="agree-p" bind:tap="agreeUser">《服务协议》</p><p>和</p><p class="agree-p" bind:tap="agreePrivacy">《隐私政策》</p>
    <!-- </span> -->
  </view>
</view>
